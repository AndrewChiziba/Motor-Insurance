FROM node:20-alpine AS development

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Copy docker-specific env file
COPY .env .env

EXPOSE 3000

# Start development server with default internal port
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]